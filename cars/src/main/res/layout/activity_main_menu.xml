<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dk.aau.cs.giraf.cars.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal">

        <!--<dk.aau.cs.giraf.gui.GButtonProfileSelect
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_button"
            android:layout_margin="20dp"
            android:layout_gravity="left|top"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <dk.aau.cs.giraf.gui.GWidgetProfileSelection
                android:id="@+id/profile_widget"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                android:layout_gravity="left"/>

            <dk.aau.cs.giraf.gui.GirafButton
                android:id="@+id/profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                app:icon="@drawable/icon_change_user"
                android:layout_toRightOf="@id/profile_widget"/>
        </RelativeLayout>

        <dk.aau.cs.giraf.gui.GirafButton
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            app:text="Start Spil"
            android:id="@+id/button2"
            android:onClick="startGame"
            android:layout_margin="20dp"
            android:minWidth="400dp"/>

        <dk.aau.cs.giraf.gui.GirafButton
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            app:text="Rediger bane"
            android:id="@+id/mapbutton"
            android:onClick="startMapEditor"
            android:layout_margin="20dp"
            android:minWidth="400dp"/>

        <dk.aau.cs.giraf.gui.GirafButton
            android:layout_width="wrap_content"
            android:layout_height="75sp"
            app:text="Indstillinger"
            android:id="@+id/button"
            android:onClick="showSettings"
            android:layout_margin="20dp"
            android:minWidth="400dp"/>

    </LinearLayout>

</ScrollView>
